
@{
    ViewBag.Title = "SubContractor";
}



<div class="container content-in">
    <div class="row">
        <h1>Sub Contractor</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="row form-group">
                <div class="col-md-3">
                    <label>Code</label>
                    <input type="text" class="form_input half" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Contractor Name</label>
                    <input type="text" class="form_input" />
                </div>


            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">





            </div>
        </div>
        


        

    </div>

    <hr />
    <h2>Contact Details</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Name</label>
                    <input type="text" class="form_input" />
                </div>




            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Designation</label>
                    <input type="text" class="form_input" />
                </div>



            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-6">
                    <label>Office No.</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>Mobile No.</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>


        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Email ID</label>
                    <input type="text" class="form_input" />
                </div>



            </div>
        </div>



    </div>


    <hr />
    <h2>Billing Address</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Address 1</label>
                    <input type="text" class="form_input" />
                </div>





            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Address 2</label>
                    <input type="text" class="form_input" />
                </div>




            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">

                <div class="col-md-12">
                    <label>Address 3</label>
                    <input type="text" class="form_input" />
                </div>


            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">

                <div class="col-md-12">
                    <label>Address 4</label>
                    <input type="text" class="form_input" />
                </div>


            </div>
        </div>


    </div>

    <div class="row">
        <hr />
        <div class="col-md-12">
            <button type="button" class="form-button" onclick="Previous()">Previous</button>
            <button type="button" class="form-button right">Save</button>
            <button type="button" class="form-button right" onclick="Exit()">Exit</button>
        </div>

    </div>
</div>
<script>
    function Previous() {
        var url = '@Url.Action("PreviousSubContractor", "Admin")'
        window.location = url;
    }
    function Exit() {
        var url = '@Url.Action("index", "home")'
        window.location = url;
        }
</script>