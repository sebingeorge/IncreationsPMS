
@{
    ViewBag.Title = "Customer";
}



<div class="container content-in">
    <div class="row">
        <h1>Customer</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="row form-group">
                <div class="col-md-3">
                    <label>Customer Name</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Customer Short Name</label>
                    <input type="text" class="form_input half" />
                </div>
                

            </div>
        </div>




        

    </div>

    <hr />
    <h2>Contact Details</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Name</label>
                    <input type="text" class="form_input" />
                </div>




            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Designation</label>
                    <input type="text" class="form_input" />
                </div>



            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-6">
                    <label>Office No.</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>Mobile No.</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>


        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Email ID</label>
                    <input type="text" class="form_input" />
                </div>

                


            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-6">
                    <label>Pin</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>District</label>
                    <select class="form_input">
                        <option value="">Ernakulam</option>
                        <option value="">Iddukki</option>
                    </select>
                </div>


            </div>
        </div>

        

    </div>

    <hr />
    <h2>Billing Address</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Address 1</label>
                    <input type="text" class="form_input" />
                </div>





            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Address 2</label>
                    <input type="text" class="form_input" />
                </div>




            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">

                <div class="col-md-12">
                    <label>Address 3</label>
                    <input type="text" class="form_input" />
                </div>


            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">



                <div class="col-md-6">
                    <label>Credit Period</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>Credit Amount</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>

    </div>

    <div class="row">
        <hr />
        <div class="col-md-12">
            <button type="button" class="form-button" onclick="Previous()">Previous</button>
            <button type="button" class="form-button right">Save</button>
            <button type="button" class="form-button right" onclick="Exit()">Exit</button>
        </div>

    </div>
</div>
<script>
    function Previous() {
        var url = '@Url.Action("PreviousCustomer", "Admin")'
        window.location = url;
    }
    function Exit() {
        var url = '@Url.Action("index", "home")'
        window.location = url;
        }
</script>