@model List<IncreationsPMSDomain.PendingProjects>
@*@{
    ViewBag.Title = "PendingProjectS";
}*@

<script>
    function Select() {
        var url = '@Url.Action("Projects", "EnquiryBooking")'
        window.location = url;
    }
    function Proceed() {
        var url = '@Url.Action("Projects", "EnquiryBooking")'
        window.location = url;
    }

    function Exit() {
        var url = '@Url.Action("index", "home")'
        window.location = url;
    }
    function Filter() {
        $("#PendingProjectS").addClass("fade");
        var FromDate = $("#txtFrom").val().trim();
        var ToDate = $("#txtTo").val().trim();
        var ClientName = $("#ClientName").val().trim();
        var url = '@Url.Action("PendingProjectSPartial")';
        url += "?FromDate=" + FromDate + "&ToDate=" + ToDate + "&ClientName=" + encodeURIComponent(ClientName);
        $("#PendingProjectS").load(url, function () {
            $("#PendingProjectS").removeClass("fade");
        });
    }
</script>

<div class="container content-in">
    <div class="row">
        <h1>Pending projects</h1>
    </div>

    <div class="row">

        <div class="col-md-4">
            <div class="row">

                <div class="col-md-6">
                    <label>From</label>
                    <div class="input-group date form_date" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                        <input id="txtFrom" value="@ViewBag.Fromdate.ToString("dd-MMMM-yyyy")" class=" form_input" onchange="Filter()" />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label>To</label>
                    <div class="input-group date form_date" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                        <input id="txtTo" value="@System.DateTime.Now.ToString("dd-MMMM-yyy")" class="form_input" onchange="Filter()" />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-4">
            <div class="row">

                <div class="col-md-6">
                    <label>Client</label>
                    <input id="ClientName" class="form_input" placeholder="Search for Client" onkeyup="Filter()" />
                </div>


            </div>
        </div>




    </div>


    <br />

    <div id="PendingProjectS">
        @Html.Action("PendingProjectSPartial")
    </div>






    <div class="row">
        <hr />
        <div class="col-md-offset-8 col-md-4">
            @*<button type="button" class="form-button right" onclick="Proceed()">Proceed</button>*@
            <button type="button" class="form-button right" onclick="Exit()">Exit</button>
        </div>

    </div>




</div>









