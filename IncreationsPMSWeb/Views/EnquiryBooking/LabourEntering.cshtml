
@{
    ViewBag.Title = "LabourEntering";
}




<div class="container content-in">
    <div class="row">
        <h1>Labour Entering</h1>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-6">
                    <label>Date</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Workers Labour</label>
                    <select class="form_input">
                        <option value="">Labour Charges Cleaning</option>
                        <option value="">Labour Charges Helper</option>
                        <option value="">Transportation</option>
                        <option value="">Conveyance</option>
                        <option value="">Any Other Overheads</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Clent</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Project</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-6">
                    <label>Month</label>
                    <input type="text" class="form_input" />
                </div>
                <div class="col-md-6">
                    <label>Amount</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>





    </div>

  













    <div class="row">
        <hr />
        <div class="col-md-12">

            <button type="button" class="form-button right">Save</button>
            <button type="button" class="form-button right" onclick="Exit()">Exit</button>

        </div>

    </div>
</div>

<script>
    function Exit() {
        var url = '@Url.Action("index", "home")'
        window.location = url;
        }
</script>
