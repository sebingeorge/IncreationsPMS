@model List<IncreationsPMSDomain.PendingBOQPreparing>

@{
    ViewBag.Title = "Index";
}

<script>
    function Exit() {
        var url = '@Url.Action("index", "home")'
        window.location = url;
    }
    function Previous()
    {
        var url = '@Url.Action("ListIndex")';
        location.href = url;
    }
    function Select() {
        var url = '@Url.Action("BOQPreparing", "BOQ")'
        window.location = url;
    }
    function Filter() {
         $("#BOQPreparing").addClass("fade");
        var ClientName = $("#ClientName").val().trim();
        var url = '@Url.Action("PendingBOQPreparing")';
        url += "?ClientName=" + encodeURIComponent(ClientName);
        $("#BOQPreparing").load(url, function () {
        $("#BOQPreparing").removeClass("fade");
        });
    }
</script>
<div class="container content-in">
    <div class="row">
        <h1>Pending BOQ Preparing</h1>
    </div>
    <div class="row">
            <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">
                    <label>Client</label>
                    <input id="ClientName" class="form_input" placeholder="Search for Client" onkeyup="Filter()" />
                </div>
                                          
            </div>
        </div>
    </div>
    <br />
    <div id="BOQPreparing">
        @Html.Action("PendingBOQPreparing")
    </div>
    <div class="row">
        <hr />
        @*<div class="col-md-offset-8 col-md-4">*@
            <div class="col-md-12">
                <button type="button" class="form-button right" onclick="Exit()">Exit</button>
                <button type="button" class="form-button" onclick="Previous()">Previous</button>
            </div>
    </div>
</div>

