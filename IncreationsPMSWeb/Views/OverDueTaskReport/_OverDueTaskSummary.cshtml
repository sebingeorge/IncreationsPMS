@model List<IncreationsPMSDomain.OverDueTaskReport>


<style type="text/css">
    .colour-Red {
        color: red !important;
    }
</style>


<!-- modal to show details -->
<div id="details-modal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document" style="width:1250px">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="modal-header">
                        <strong><h4 class="modal-title" id="myModalLabel">Customer</h4></strong>
                    </div>
                </div>
            </div>
            <div class="modal-body" id="div-details">
                Loading...
            </div>

        </div>
    </div>
</div>

<div>
    <table class="table table-bordered" id="aaa" data-placement="bottom">
        <thead>
            <tr class="grid_heading">
                <th width="10%">Project Ref No</th>
                 <th width="30%">Project</th>
                <th width="20%">Client</th>
                <th width="20%">Task</th>
                <th width="20%">Work</th>
                <th width="20%">Over Due</th>
         </tr>
        </thead>
        <tbody class="grid_row">
            @{

                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].ProjectRefNo </td>
                        <td>@Model[i].ProjectEnquiry </td>
                        <td>@Model[i].ClientName </td>
                        <td>@Model[i].TaskName </td>
                        <td>@Model[i].ProjectWorkDescription </td>
                        <td>@Model[i].DiffDate </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>
